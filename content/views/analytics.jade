html
head
  title Express Analytics
  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css')
  link(rel='stylesheet', href='/express.analytics.css')
  body
    .container
      h1 Express Analytics
      //p.lead
        | This example page collects information and events generated by your web browser and stores them in joola.io.
        | Data
        | is then queried in as meaningful KPI and shown as both metrics and sparklines.
      .row
        .col-lg-6
          .row
            .col-lg-6.text-right
              #metric-requests(style='float: right; width: 100%;')
            .col-lg-6
              #chart-requests(style='height: 70px;')
          .row
            .col-lg-6.text-right
              #metric-loadtime(style='width: 100%;')
            .col-lg-6
              #chart-loadtime(style='height: 70px;')

        .col-lg-6
          .row
            .col-lg-12
              #geo-requests(style='width: 100%;')
          .row
            .col-lg-12
              #table-refer(style='width: 100%;')
          .row
            .col-lg-12
              #table-url(style='width: 100%;')
          .row
            .col-lg-12
              #pie-codes(style='width: 100%;')


    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js')
    script(src='http://code.highcharts.com/highcharts.js')
    script(src='http://demo.joola.io:8080/3rd/sorttable/sorttable.js')
    script(type='text/javascript', src='https://www.google.com/jsapi')
    script.
      google.load('visualization', '1', {'packages': ['geochart']});

    script(src='/express.analytics.js')

